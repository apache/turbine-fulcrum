    <testSourceDirectories>
      <testSourceDirectory>src/core</testSourceDirectory>
      <testSourceDirectory>src/services</testSourceDirectory>
      <testSourceDirectory>src/util</testSourceDirectory>
      <testSourceDirectory>src/test</testSourceDirectory>
    </testSourceDirectories>

    <aspectSourceDirectories>
    </aspectSourceDirectories>

    <!-- Unit test classes -->
    <unitTestClassEntries>
      <unitTestClassEntry>include = **/*Test*.class</unitTestClassEntry>
    </unitTestClassEntries>

    <!-- Runtime unit test classes -->
    <runtimeTestClassEntries>
    </runtimeTestClassEntries>

    <!-- J A R  R E S O U R C E S -->
