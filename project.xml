    <dependency>
      <name>commons-lang</name>
      <type>required</type>
      <version>0.1</version>
      <jar>commons-lang-0.1-dev.jar</jar>
    </dependency>

    <dependency>
      <name>commons-pool</name>
      <type>required</type>
      <version>0.1</version>
      <jar>commons-pool.jar</jar>
    </dependency>

    <dependency>
      <name>commons-fileupload</name>
