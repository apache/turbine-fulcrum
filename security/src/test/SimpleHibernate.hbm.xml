<?xml version="1.0"?>
  <!DOCTYPE hibernate-mapping PUBLIC
	 "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
	 "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"> 

  <hibernate-mapping auto-import="true">
    <class name="org.apache.fulcrum.security.model.simple.entity.SimplePermission" table="PERMISSION" >
      <id name="id" type="long" column="PERMISSION_ID" unsaved-value="0">
           <generator class="native"/>
        </id>
      <property name="name" column="NAME" type="string"/>          
    </class>
    
    <class name="org.apache.fulcrum.security.spi.hibernate.simple.entity.HibernateSimpleRole" table="ROLE" >
      <id name="id" type="long" column="ROLE_ID" unsaved-value="0">
           <generator class="native"/>
        </id>
      <property name="name" column="NAME" type="string"/>      
      
	  <set name="hibernatePermissions" lazy="true" table="ROLE_PERMISSION">
        <key column="ROLE_ID"/>
        <many-to-many class="org.apache.fulcrum.security.model.simple.entity.SimplePermission" column="PERMISSION_ID"/> 
      </set>
    </class>   

    <class name="org.apache.fulcrum.security.spi.hibernate.simple.entity.HibernateSimpleGroup" table="GROUP" >
      <id name="id" type="long" column="GROUP_ID" unsaved-value="0">
           <generator class="native"/>
        </id>
      <property name="name" column="NAME" type="string"/>      
      
	  <set name="hibernateRoles" lazy="true" table="GROUP_ROLE">
        <key column="GROUP_ID"/>
        <many-to-many class="org.apache.fulcrum.security.spi.hibernate.simple.entity.HibernateSimpleRole" column="ROLE_ID"/> 
      </set>
    </class>   

    <class name="org.apache.fulcrum.security.spi.hibernate.simple.entity.HibernateSimpleUser" table="HIBUSER" >
      <id name="id" type="long" column="HIBUSER_ID" unsaved-value="0">
           <generator class="native"/>
        </id>
      <property name="name" column="USERNAME" type="string"/>      
      <property name="password" column="PASSWORD" type="string"/>            
      
	  <set name="hibernateGroups" lazy="true" table="HIBUSER_GROUP">
        <key column="USER_ID"/>
        <many-to-many class="org.apache.fulcrum.security.spi.hibernate.simple.entity.HibernateSimpleGroup" column="GROUP_ID"/> 
      </set>
    </class>    

    
  </hibernate-mapping>