<project default="local:build" xmlns:deploy="deploy" xmlns:ant="jelly:ant">

  <!-- ################################################################## -->
  <!-- M A V E N  H O O K S                                               -->
  <!-- ################################################################## -->

  <postGoal name="clean:clean">
    <echo>Deleting Eclipse directories</echo>
    <ant:delete dir="classes"/>
    <ant:delete dir="${basedir}/temp/archive" failonerror="false"/>
    <ant:delete verbose="false" failonerror="false">
      <ant:fileset dir="${basedir}/temp">
        <ant:include name="*.eml" />
      </ant:fileset>
    </ant:delete>        
  </postGoal>

</project>
