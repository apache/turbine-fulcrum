        <role>Developer</role>
      </roles>
    </developer>
  </developers>
    
  <dependencies>

    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
    </dependency>
    
  </dependencies>
 
  <properties>
    <implementation>org.apache.fulcrum.pull.DefaultPullService</implementation>
  </properties>
  
  <build>
    <sourceDirectory>${basedir}/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
    
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
        <include>**/*TestCase.java</include>
      </includes>
      <excludes>
        <exclude>**/*Abstract*.java</exclude>
      </excludes>
    </unitTest>
  
    <resources/>
  </build>
  
</project>
