  <name>Pull Service</name>
  <currentVersion>1.0-alpha-3</currentVersion>
  <package>org.apache.fulcrum.pull</package>
  <shortDescription>A service which "pulls" components into templates.</shortDescription>
  
  <description>
    The pull service will pull in a component into a template.
  </description>
  

  <developers>
    <developer>
      <name>Jason van Zyl</name>
      <id>jvanzyl</id>
      <email>jason@zenplex.com</email>
      <organization>Zenplex</organization>
      <roles>
        <role>Architect</role>
        <role>Release Manager</role>
      </roles>
    </developer>
    <developer>
      <name>Pete Kazmier</name>
      <id>kaz</id>
      <email></email>
      <organization></organization>
      <roles>
