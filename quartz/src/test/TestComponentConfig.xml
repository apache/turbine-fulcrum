                <jobListeners/>
              </org.quartz.JobDetail>
              <org.quartz.JobDetail>
                <name>notSoSimpleJob</name>
                <group>DEFAULT_GROUP</group>
                <jobClass>org.apache.fulcrum.quartz.test.NotSoSimpleJob</jobClass>
