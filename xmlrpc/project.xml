<?xml version="1.0"?>
<project>
  <extend>${basedir}/../project.xml</extend>
  <id>fulcrum-xmlrpc</id>
  <name>Fulcrum XMLRPC Component</name>
  <currentVersion>1.0.4</currentVersion>

  <!--contributors>
    <contributor>
      <name>Ronald</name>
      <id>ronald</id>
      <email>ronald@innovation.ch</email>
      <roles>
        <role>Developer</role>
      </roles>
    </contributor>
  </contributors-->    
  
  <dependencies>

    <dependency>
      <groupId>xmlrpc</groupId>
      <artifactId>xmlrpc</artifactId>
      <version>1.1</version>
    </dependency>

    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>2.0.2</version>
    </dependency>

    <!--  Needed only for testing -->
    <dependency>
      <groupId>fulcrum</groupId>
      <artifactId>fulcrum-testcontainer</artifactId>
      <version>1.0.4-dev</version>
    </dependency>
    
    <dependency>
      <groupId>fulcrum</groupId>
      <artifactId>fulcrum-yaafi</artifactId>
      <version>1.0.3-dev</version>
    </dependency> 

    <dependency>
      <groupId>xml-apis</groupId>
      <artifactId>xml-apis</artifactId>
      <version>2.0.2</version>
      <url>http://xml.apache.org/xerces2-j/</url>
    </dependency>


  </dependencies>

  <properties>
    <implementation>org.apache.fulcrum.xmlrpc.DefaultXmlRpcClientComponent</implementation>
    <implementation>org.apache.fulcrum.xmlrpc.DefaultXmlRpcServerComponent</implementation>
  </properties>


  <build>
    <unitTest>
     <includes>
      <include>**/XmlRpcComponentTest.*</include>
     </includes>
     <resources>      
        <resource> 
         <directory>${basedir}/src/test</directory>
         <targetPath>/</targetPath>
          <includes>
            <include>*.xml</include>
          </includes>
        </resource>          
      </resources>      
    </unitTest>
  </build>
</project>

