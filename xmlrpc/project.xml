<?xml version="1.0"?>
<project>
  <extend>${basedir}/../project.xml</extend>
  <id>fulcrum-xmlrpc</id>
  <name>Fulcrum XMLRPC Component</name>
  <currentVersion>1.0-alpha-3</currentVersion>

  <dependencies>

    <dependency>
      <id>javamail</id>
      <version>1.3</version>
    </dependency>

    <dependency>
      <id>xmlrpc</id>
      <version>1.1</version>
    </dependency>

    <dependency>
      <id>xml-apis</id>
      <version>1.0.b2</version>
    </dependency>

    <!--  Needed only for testing -->
    <dependency>
      <id>fulcrum-testcontainer</id>
      <version>1.0-alpha-1</version>
    </dependency>

    <dependency>
      <id>xerces:xercesImpl</id>
      <version>2.0.2</version>
      <url>http://xml.apache.org/xerces2-j/</url>
    </dependency>

    <dependency>
      <id>xerces:xmlParserAPIs</id>
      <version>2.0.2</version>
      <url>http://xml.apache.org/xerces2-j/</url>
    </dependency>


  </dependencies>

  <properties>
    <implementation>org.apache.fulcrum.xmlrpc.DefaultXmlRpcComponent</implementation>
  </properties>


  <build>
    <unitTest>
     <includes>
      <include>**/XmlRpcComponentTest.*</include>
     </includes>
     <resources>      
        <resource> 
         <directory>${basedir}/src/test</directory>
         <targetPath>/</targetPath>
          <includes>
            <include>*.xml</include>
          </includes>
        </resource>          
      </resources>      
    </unitTest>
  </build>
</project>

